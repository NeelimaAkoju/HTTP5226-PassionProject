@model TripApplication.Models.PlaceDto

@{
    ViewData["Title"] = "Edit Place";
}

<h1>Edit Place</h1>

<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Place/Update/@Model.PlaceId" method="POST">
            <div class="form-group">
                <input type="hidden" name="PlaceId"  value="@Model.PlaceId"/>
                <label for="PlaceName" class="control-label">Name</label>
                <input name="PlaceName" class="form-control" value="@Model.PlaceName" />
            </div>
            <div class="form-group">
                <label for="PlaceDescription" class="control-label">Description</label>
                <input name="PlaceDescription" class="form-control" value="@Model.PlaceDescription" />
            </div>
            <div class="form-group">
                <label for="PlaceCity" class="control-label">City</label>
                <input name="PlaceCity" class="form-control" value="@Model.PlaceCity"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Place/List">Back to List</a>
</div>