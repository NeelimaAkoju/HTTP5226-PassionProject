@model TripApplication.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create Customer</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Customer/Create" method="POST">
            <div class="form-group">
                <label for="CustomerName" class="control-label">Name</label>
                <input name="CustomerName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="EmailId" class="control-label">Email</label>
                <input name="EmailId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Customer/List">Back to List</a>
</div>