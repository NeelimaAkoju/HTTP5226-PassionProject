@model TripApplication.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.EmailId
        </dd>
    </dl>
    <a href="/Customer/ListTripsForCustomer/@Model.CustomerId" class="btn btn-primary">Get Trips</a>
</div>
<div>
    <a href="/Customer/Edit/@Model.CustomerId" class="btn btn-primary">Edit</a> |
    <a href="/Customer/List" class="btn btn-secondary">Back to List</a>
</div>