@model TripApplication.Models.TripDto

@{
    ViewData["Title"] = "Edit Trip";
}

<h1>Create Trip</h1>

<h4>Trip</h4>

<div class="row">
    <div class="col-md-4">
        <form action="/Trip/Update/@Model.TripID" method="POST">
            <div class="form-group">
                <input type="hidden" name="TripID" value="@Model.TripID" />
                <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
                <input type="hidden" name="Place" value="@Model.Places" />
                <label for="TripName" class="control-label">Name</label>
                <input name="TripName" class="form-control" value="@Model.TripName" />
            </div>
            <div class="form-group">
                <label for="TripDescription" class="control-label" >Description</label>
                <input name="TripDescription" class="form-control" value="@Model.TripDescription"/>
            </div>
            <div class="form-group">
                <label for="StartDate" class="control-label" >Start Date</label>
                <input name="StartDate" class="form-control" type="date" value="@Model.StartDate.ToString("yyyy-MM-dd")"  />
            </div>
            <div class="form-group">
                <label for="EndDate" class="control-label" >End Date</label>
                <input name="EndDate" class="form-control" type="date" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Trip/List">Back to List</a>
</div>